const year = new Date().getFullYear();
---

<footer class="border-t border-[var(--border-subtle)] py-12 px-4 sm:px-6">
  <div class="max-w-6xl mx-auto">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mb-10">
      <div>
        <h4 class="text-xs font-mono font-bold text-[var(--text-muted)] uppercase tracking-widest mb-4">Platform</h4>
        <ul class="space-y-2">
          <li><a href="#features" class="text-sm text-[var(--text-secondary)] hover:text-[var(--text-primary)] transition-colors">Features</a></li>
          <li><a href="#platforms" class="text-sm text-[var(--text-secondary)] hover:text-[var(--text-primary)] transition-colors">Platforms</a></li>
          <li><a href="#trust" class="text-sm text-[var(--text-secondary)] hover:text-[var(--text-primary)] transition-colors">Trust Model</a></li>
          <li><a href="#changelog" class="text-sm text-[var(--text-secondary)] hover:text-[var(--text-primary)] transition-colors">Changelog</a></li>
        </ul>
      </div>
      <div>
        <h4 class="text-xs font-mono font-bold text-[var(--text-muted)] uppercase tracking-widest mb-4">Ecosystem</h4>
        <ul class="space-y-2">
          <li><a href="/ecosystem" class="text-sm text-[var(--text-secondary)] hover:text-[var(--text-primary)] transition-colors">Overview</a></li>
          <li><a href="https://openpeople.ai" class="text-sm text-[var(--text-secondary)] hover:text-[var(--text-primary)] transition-colors">Open People</a></li>

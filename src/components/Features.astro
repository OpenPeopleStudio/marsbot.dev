---

<section id="features" class="py-24 px-4 sm:px-6 border-t border-[var(--border-subtle)]">
  <div class="max-w-5xl mx-auto">

    <!-- Header -->
    <div class="mb-12">
      <div class="inline-flex items-center gap-2 text-xs font-mono text-[var(--text-muted)] uppercase tracking-widest mb-8">
        <span class="w-4 h-px bg-[var(--mars-orange)]"></span>
        Capabilities
      </div>
      <h2 class="text-2xl sm:text-3xl font-mono font-bold text-[var(--text-primary)] mb-3">
        Built to run in production.
      </h2>
      <p class="text-[var(--text-secondary)] max-w-xl">
        Not a thin wrapper. Marsbot is a full agentic runtime with the primitives you need for real work.
      </p>
    </div>

    <!-- Stats bar -->
    <div class="grid grid-cols-4 gap-px bg-[var(--border-subtle)] rounded-xl overflow-hidden mb-10 border border-[var(--border-subtle)]">
      {stats.map((stat) => (
        <div class="bg-[var(--surface-1)] px-4 py-4 text-center">
          <div class="text-2xl font-mono font-bold text-[var(--mars-orange)]">{stat.value}</div>
          <div class="text-xs font-mono text-[var(--text-muted)] mt-0.5 uppercase tracking-wider">{stat.label}</div>
        </div>
      ))}
    </div>

    <!-- Feature grid -->
    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-3">
      {features.map((feature) => (
        <div class="feature-card group">
          <div class="flex items-start gap-3">
            <div class="text-[var(--mars-orange)] mt-0.5 opacity-80 group-hover:opacity-100 transition-opacity shrink-0" set:html={feature.icon} />
            <div>
              <h3 class="font-mono font-semibold text-[var(--text-primary)] text-sm mb-1.5">
                {feature.title}
              </h3>
              <p class="text-xs text-[var(--text-secondary)] leading-relaxed">
                {feature.description}
              </p>
            </div>
          </div>
        </div>
      ))}
    </div>

  </div>
</section>
